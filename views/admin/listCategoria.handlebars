{{#with postagens.[0]}}
<div class="d-flex">
    <img class="mx-2 my-1" src="https://image.flaticon.com/icons/png/512/40/40022.png" alt="Etiqueta" width="40" height="40">
    <h2>{{categoria.nome}}</h2>
</div>

<small>Criado em: {{categoria.createdAt}}</small><br>
<small>Atualizado em: {{categoria.updatedAt}}</small><br>
<small>Slug: {{categoria.slug}}</small>
{{/with}}

<div class="card mt-4">
    <div class="card-header">
        <h3>Postagens nessa categoria:</h3>
    </div>
    <div class="card-body">
        {{#each postagens}}
            <div class="card mt-4">
        <div class="card-body">
            <div class="d-flex justify-content-between">
                <div>
                    <h4>{{titulo}}</h4>
                </div>
                <div class="dropdown">
                    <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Configurações
                    </button>
                    <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                        <a class="dropdown-item" href="/admin/postagens/edit/{{id}}">Editar Postagem</a>
                        <a class="dropdown-item text-danger" href="/admin/postagens/delete/{{id}}">Excluir Postagem</a>
                    </div>
                </div>
            </div>
            
            <p>{{descricao}}</p>
            <small>Slug: {{slug}}</small><br>
            <small>Data de criação: {{date}}</small><br>
            <a href="/admin/postagens/readMore/{{slug}}"><button class="btn btn-dark mt-2">Leia mais</button></a>
        </div>
    </div>
        {{else}}
            <h4 class="mt-3">Nenhuma postagem até o momento.</h4>
            <h5>Crie uma nova :)</h5>
        {{/each}}
    </div>
</div>