
<h2>Lista de postagens: </h2>
<hr>
<a href="/admin/postagens/add"><button class="btn btn-success">Nova postagem</button></a>

{{#each postagens}}
    <div class="card mt-4">
        <div class="card-body">
            <div class="d-flex justify-content-between">
                <div>
                    <h4>{{titulo}}</h4>
                </div>
                <div class="d-flex">
                    <img class="mx-2 my-1" src="https://image.flaticon.com/icons/png/512/40/40022.png" alt="Etiqueta" width="20" height="20">
                    <a href="/admin/categorias/{{categoria.slug}}"><h5>{{categoria.nome}}</h5></a>
                </div>
                <div class="dropdown">
                    <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Configurações
                    </button>
                    <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                        <a class="dropdown-item" href="/admin/postagens/edit/{{id}}">Editar Postagem</a>
                        <a class="dropdown-item text-danger" href="/admin/postagens/delete/{{id}}">Excluir Postagem</a>
                    </div>
                </div>
            </div>
            
            <p>{{descricao}}</p>
            <small>Slug: {{slug}}</small><br>
            <small>Data de criação: {{date}}</small><br>
            <a href="/admin/postagens/readMore/{{slug}}"><button class="btn btn-dark mt-2">Leia mais</button></a>
        </div>
    </div>
{{else}}
    <h4 class="mt-3">Nenhuma postagem até o momento.</h4>
    <h5>Crie uma nova :)</h5>

{{/each}}